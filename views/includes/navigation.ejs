<style>
.navigation {
    width: 100%;
    background-color: white;
    /*position: fixed;*/
}

.navigation .top {
    width: 85%;
    max-width: 1500px;
    margin: 0 auto;
    margin-top: 8px;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
}

.navigation .top .logo-box {
    width: 120px;
}

.navigation .top .logo-box .logo {
    width: 100%;
}

.navigation .top .button {
    text-transform: uppercase;
    font-size: 16px;
    color: white;
    background-color: rgb(17, 45, 80);
    padding: 7px 15px;
    margin-top: 10px;
    border-radius: 2px;
}

.navigation .bottom {
    width: 85%;
    max-width: 1500px;
    margin: 0 auto;
    margin-top: 10px;
}

.navigation .bottom .menu {
    display: flex;
    list-style-type: none;
}

.navigation .bottom .menu .item {
    margin-right: 15px;
    color: black;
    text-transform: uppercase;
    font-size: 11px;
    letter-spacing: 1px;
}

.navigation .separator {
    width: 100%;
    height: 9px;
    border-top: 1px solid rgba(0, 0, 0, .3);
    margin-top: 9px;
}
</style>

<div class="navigation">
    <div class="top">
        <div class="logo-box">
            <img class="logo" src="images/logo-blue.png" alt="">
        </div>
        <% if (!isAuthenticated) { %>
            <% if (pageTitle == 'Signup') { %>
                <a href="/login"><div class="button">Login</div></a>
            <% } else if (pageTitle == 'Login') { %>
                <a href="/signup"><div class="button">Signup</div></a>
            <% } %>
        <% } else { %>
            <a href="/logout"><div class="button">Logout</div></a>
        <% } %>
    </div>
    <div class="bottom">
        <div class="menu">
            <a href="/"><div class="item">Offering</div></a>
            <a href="/myTransactions"><div class="item">Transaction</div></a>
            <a href="/myInvesments"><div class="item">My Invesments</div></a>
            <a href="/myDocuments"><div class="item">Documents</div></a>
        </div>
    </div>
    <div class="separator"></div>
</div>